  <body>

    <div class="container-narrow">

      <div class="masthead">
        <ul class="nav nav-pills pull-right">
          <li><a href="/">Home</a></li>
          <li><a href="/faq">FAQ</a></li>
          <li class='active'><a href="/addconcert">Add a concert listing</a></li>
        </ul>
        <h3 class="muted"><a class='title' href="/">Concerto</a></h3>
      </div>

      <hr>

      <div class="">
        <form class='form-horizontal' action='/addconcert' method='post'>
          <input type='hidden' name='_method' value='put'>
          <div class="control-group">
            <label class='control-label' for='inputTitle'>Title</label>
            <div class='controls'>
              <input id='inputTitle' class="span3" type='text' placeholder="My Awesome Concert" name='title'>
              <span class='help-inline'> *Not required </span>
            </div>
          </div>
          <div class="control-group">
            <label class='control-label' for='inputDate'>Date</label>
            <div class='controls'>
              <input id='inputDate' class="span3" type='text' placeholder="02/12/2013" name='date'>
            </div>
          </div>
          <div class="control-group">
            <label class='control-label' for='inputTime'>Time</label>
            <div class='controls'>
              <input id='inputTime' class="span3" type='text' placeholder="8:30 PM" name='time'>
            </div>
          </div>
          <div class="control-group">
            <label class='control-label' for='inputVenue'>Venue</label>
            <div class='controls'>
              <input id='inputVenue' class="span3" type='text' placeholder="Concert Hall" name='venue'>
            </div>
          </div>
          <div class="control-group">
            <label class='control-label' for='inputAddress'>Address</label>
            <div class='controls'>
              <input id='inputAddress' class="span3" type='text' placeholder="123 Fourth Street" name='address'>
            </div>
          </div>
          <div class="control-group">
            <label class='control-label' for='inputCity'>City</label>
            <div class='controls'>
              <input id='inputCity' class="span3" type='text' placeholder="Winnipeg" name='city'>
            </div>
          </div>
          <div class="control-group">
            <label class='control-label' for='inputAdvance'>Advance</label>
            <div class='controls'>
              <div class='input-prepend'>
                <span class='add-on'>$</span>
                <input id='prependedInput' class='span1' type='text' placeholder="15" name='advance'>
              </div>
            </div>
          </div>
          <div class="control-group">
            <label class='control-label' for='inputAdvance'>Door</label>
            <div class='controls'>
              <div class='input-prepend'>
                <span class='add-on'>$</span>
                <input id='prependedInput' class='span1' type='text' placeholder="20" name='door'>
              </div>
            </div>
          </div>
          <div class="control-group">
            <label class='control-label' for='inputArtist'>Artists</label>
            <div class='controls'>
              <input id='inputArtist' class="span3" type='text' placeholder="Michael Jackson" name='artist1'>&nbsp;
              <a class='btn btn-success add-artist'> <i class='icon-plus icon-white'></i></a>
            </div>
          </div>
          <div class="control-group">
            <label class='control-label inline' for='inputSubmit'></label>
            <div class='controls'>
              <button type='submit' class='btn btn-primary'>Add concert</button>              
            </div>
          </div>
        </form>
